{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "baseUrl": ".",
    "paths": {
      "~components/*": ["./src/components/*"],
      "~assets/*": ["./src/assets/*"],
      "~configs/*": ["./src/configs/*"],
      "~layouts/*": ["./src/layouts/*"],
      "~pages/*": ["./src/pages/*"],
      "~features/*": ["./src/features/*"],
      "~constants/*": ["./src/constants/*"],
      "~helpers/*": ["./src/helpers/*"],
      "~libs/*": ["./src/libs/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [".eslintrc.cjs", "commitlint.config.cjs", ".prettierrc.cjs", "postcss.config.cjs", "src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
